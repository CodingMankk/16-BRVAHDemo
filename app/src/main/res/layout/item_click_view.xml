<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dip"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:background="@drawable/touch_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <TextView
        android:layout_centerVertical="true"
        android:background="#aaff00"
        android:textColor="@color/dull_blue"
        android:textSize="@dimen/dp_40"
        android:gravity="center"
        android:text="0"
        android:id="@+id/TextView"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:background="@drawable/touch_bg"
        android:gravity="center"
        android:text="点击我"
        android:textColor="@color/txt_color"
        android:layout_below="@+id/tv1"
        android:layout_alignLeft="@+id/tv1"
        android:layout_alignStart="@+id/tv1"
        android:layout_marginTop="13dp"
        />

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:text="Item单击/长按事件"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="13dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TextView"
        android:layout_toEndOf="@+id/TextView"/>

    <TextView

        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:text="子view-Btn单击事件"
        android:layout_below="@+id/tv"
        android:layout_alignLeft="@+id/tv"
        android:layout_alignStart="@+id/tv"/>


</RelativeLayout>
